<p style="color: green"><%= notice %></p>

<% content_for :title, "Student rosters" %>

<h1>Student Rosters</h1>

<%= form_with url: import_student_rosters_path, multipart: true, method: :post do |form| %>
  <div>
    <%= form.label :file, "Upload CSV File:" %>
    <%= form.file_field :file, accept: ".csv" %>
  </div>
  <div>
    <%= form.submit "Upload", class: "upload-button" %>
  </div>
<% end %>


<h2>Available Rosters</h2>
<% if @rosters.any? %>
  <ul>
    <% @rosters.each do |roster| %>
      <li><%= link_to roster, student_roster_path(roster) %></li>
    <% end %>
  </ul>
<% else %>
  <p>No rosters available. Upload a CSV file to add a new roster.</p>
<% end %>