<div class="statistics-section">
  <h2>Class Statistics</h2>

  <table class="course-table">
    <thead>
      <tr>
        <th>Course Name</th>
        <th>Student Count</th>
        <th>Average Grade</th>
        <th>Highest Grade</th>
        <th>F Rate (%)</th>
        <th>Q Rate (%)</th>
        <th>W Rate (%)</th>
      </tr>
    </thead>
    <tbody>
      <% @class_statistics.each do |stat| %>
        <tr>
          <td><%= link_to stat[:course_name], roster_path(stat[:course_id]), class: "simple-link" %></td>
          <td><%= stat[:student_count] %></td>
          <td><%= stat[:average_grade].round(2) %></td>
          <td><%= stat[:highest_grade] %></td>
          <td><%= stat[:f_rate].round(2) %></td>
          <td><%= stat[:q_rate].round(2) %></td>
          <td><%= stat[:w_rate].round(2) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="button-container">
    <%= link_to 'Back to Statistics', statistics_path, class: 'btn btn-light-gray' %>
  </div>
</div>
