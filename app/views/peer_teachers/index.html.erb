<% content_for :title, "Peer Teachers" %>

<div class="container">
  <h1 class="page-title">Peer Teachers</h1>

  <% if @peer_teachers.present? %>
    <table class="course-table">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>UIN</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @peer_teachers.each do |peer_teacher| %>
          <tr>
            <td><%= peer_teacher.first_name %></td>
            <td><%= peer_teacher.last_name %></td>
            <td><%= peer_teacher.uin %></td>
            <td><%= peer_teacher.email %></td>
            <td>
              <%= link_to "View", peer_teacher_path(peer_teacher), class: "btn btn-maroon btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="no-peer-teachers">No peer teachers available.</p>
  <% end %>

  <div class="button-container">
    <%= link_to "New Peer Teacher", new_peer_teacher_path, class: "btn btn-maroon" %>
    <%= link_to "Back to Home", root_path, class: "btn btn-maroon" %>
  </div>
</div>
