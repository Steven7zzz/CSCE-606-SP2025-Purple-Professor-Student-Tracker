<h1>Teachers List</h1>

<table border="1">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>UIN</th>
      <th>Department</th>
      <th>Course & Semester</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.uin %></td>
        <td><%= teacher.department %></td>
        <td><%= teacher.course_and_semester %></td>
        <td><%= teacher.description %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6">Total Teachers: <%= @teachers.count %></td>
    </tr>
    <tr>
      <td colspan="6">
        <%= form_with url: import_teachers_path, method: :post, local: true, multipart: true do |f| %>
          <input type="file" name="file">
          <input type="submit" value="Upload CSV">
        <% end %>
      </td>
    </tr>
  </tfoot>
</table>





