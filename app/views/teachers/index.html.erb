<h1>Teachers List</h1>

<table border="1">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>UIN</th>
      <th>Department</th>
      <th>Course & Semester</th>
      <th>Description</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.uin %></td>
        <td><%= teacher.department %></td>
        <td><%= teacher.course_and_semester %></td>
        <td><%= teacher.description %></td>
        <td><%= teacher.email %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6">Total Teachers: <%= @teachers.count %></td>
    </tr>

  </tfoot>
</table>
<div>
  <%= link_to "Back to Homepage", root_path, class: "btn btn-secondary" %>
  <%= link_to "Add Teacher", new_teacher_path, class: "btn btn-primary" %>
</div>









