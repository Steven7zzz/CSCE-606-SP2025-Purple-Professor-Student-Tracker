<% content_for :title, "Enrollments" %>

<div class="container">
  <h1 class="page-title">Enrollments</h1>

  <table class="course-table">
    <thead>
      <tr>
        <th>Course</th>
        <th>Number</th>
        <th>Section</th>
        <th>Student</th>
        <th>Grade</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @enrollments.each do |enrollment| %>
        <tr>
          <td><%= enrollment.course.name %></td>
          <td><%= enrollment.course.number %></td>
          <td><%= enrollment.course.section %></td>
          <td><%= enrollment.student.first_name %> <%= enrollment.student.last_name %></td>
          <td><%= enrollment.grade.presence || "N/A" %></td>
          <td>
            <%= link_to "View", enrollment_path(enrollment), class: "btn btn-maroon btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @enrollments.empty? %>
    <p class="no-enrollments">No enrollments available.</p>
  <% end %>

  <div class="button-container">
    <%= link_to "New Enrollment", new_enrollment_path, class: "btn btn-maroon" %>
    <%= link_to "Back to Home", root_path, class: "btn btn-maroon" %>
  </div>
</div>

