<% content_for :title, "Enrollments" %>

<div class="container">
  <h1 class="page-title"> Enrollments</h1>

  <% if @enrollments.present? %>
    <table class="enrollment-table">
      <thead>
        <tr>
          <th>Course</th>
          <th>Student</th>
          <th>Grade</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @enrollments.each do |enrollment| %>
          <tr>
            <td><%= enrollment.course.name %></td>
            <td><%= enrollment.student.first_name %> <%= enrollment.student.last_name %></td>
            <td><%= enrollment.grade.presence || "N/A" %></td>
            <td>
              <%= link_to "View", enrollment_path(enrollment), class: "btn btn-light-blue btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="no-enrollments">No enrollments available.</p>
  <% end %>

  <div class="button-container">
    <%= link_to "New Enrollment", new_enrollment_path, class: "btn btn-light-green" %>
    <%= link_to "Back to Home", root_path, class: "btn btn-light-gray" %>
  </div>
</div>
