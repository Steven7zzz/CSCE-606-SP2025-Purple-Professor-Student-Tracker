  </div>


  <div class="dashboard-section student-section">
    <h2>Student & Teacher Management</h2>
    <div class="button-group">
      <%= link_to "View Students", students_path, class: "btn btn-light-green" %>
      <%= link_to "Peer Teachers", peer_teachers_path, class: "btn btn-light-green" %>
    </div>
  </div>


  <div class="dashboard-section peer-section">
    <h2>Peer Teacher Course Assignments</h2>
    <div class="button-group">
      <%= link_to "Peer Teacher Enrollments", pt_enrollments_path, class: "btn btn-light-yellow" %>
