<div class="top-banner">
  <div class="banner-left">
    <%= image_tag "TAM-Horz-Maroon.png", alt: "Texas A&M Logo", class: "tam-logo" %>
  </div>
  <div class="banner-right">
    <p class="banner-title">Howdy</p>
    <p class="banner-subtitle">Welcome to use the student tracker system!</p>
  </div>
</div>

<div class="campus-image-container">
