<% content_for :title, "Rosters" %>

<div class="container">

  <h2 class="page-title">Available Rosters</h2>
  <% if @rosters.any? %>
    <table class="course-table">
      <thead>
        <tr>
          <th>Roster Name</th>
          <th>Number</th>
          <th>Section</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @rosters.each do |roster| %>
          <tr>
            <td><%= roster.name %></td>
            <td><%= roster.number %></td>
            <td><%= roster.section %></td>
            <td>
              <%= link_to "View", roster_path(roster), class: "btn btn-light-blue btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="no-rosters">No rosters available.</p>
  <% end %>

  <!-- CSV Upload Form (Now Below the Roster List) -->
  <h2 class="subtitle">Upload a New Roster</h2>
  <%= form_with url: import_rosters_path, multipart: true, method: :post do |form| %>
    <div class="form-group">
      <%= form.label :file, "Upload CSV File:", class: "form-label" %>
      <%= form.file_field :file, accept: ".csv", class: "form-control" %>
    </div>
    <div class="button-container">
      <%= form.submit "Upload", class: "btn btn-light-blue" %>
    </div>
  <% end %>

  <div class="button-container">
    <%= link_to "Back to Home", root_path, class: "btn btn-light-gray" %>
  </div>
</div>

